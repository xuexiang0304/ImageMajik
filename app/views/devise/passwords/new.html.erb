<style>
	h2 {
		font-size: 12px;
	}
</style>
<!-- <h1 align="center" style="font-family: cursive">Forgot your password ?</h1> -->
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

<div id="forget_password_box" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
	<div class="panel panel-default" >
		<div class="panel-heading">
			<div class="panel-title" align="center">
				Forget Password
			</div>
		</div>
		<div class="panel-body" style="padding-top: 30px">
			<form id="loginform" class="form-horizontal" role="form">
				<div class="form-group">
					<span><%= f.label :email %></span>
					<%= f.email_field :email, autofocus: true,:class=>'form-control',:placeholder=>'Enter Email Address' %>
				</div>

				<div class="form-group">
					<%= f.submit "Send me reset password instructions",:class=>'btn btn-info btn-block' %>
				</div>
				<div style="color: red" >
					<%= devise_error_messages! %>
				</div>
				<div class="form-group">
					<div class="col-sm-12 controls">
						<div style="border-top: 1px solid#888; padding-top:15px; font-size:100%">
							<%= render "devise/shared/links" %>
						</div>
					</div>
				</div>
				<% end %>
			</form>
		</div>
	</div>
</div>
