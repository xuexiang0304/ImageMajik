<style>
	h2 {
		font-size: 12px;
	}
</style>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div id="sign_up_container" class="col-xs-12 col-sm-8 col-sm-offset-2">
	<div class="panel">
		<div class="panel-body">
			<form role="form">
				<div class="panel-title">
					SIGN UP <small>It's free!</small>
				</div>
				<div class="input-group">
					<%= f.label :first_name, :class=>'hide' %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.text_field :first_name, autofocus: true, :class => 'form-control', :placeholder=>'First Name' %>
				</div>

				<div class="input-group">
					<%= f.label :last_name, :class=>'hide' %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.text_field :last_name, :class => 'form-control', :placeholder=>'Last Name' %>
				</div>

				<div class="input-group">
					<%= f.label :email, :class=>'hide' %>
					<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
					<%= f.email_field :email, autofocus: true,:class => 'form-control', :placeholder=>'Email Address' %>
				</div>
				<div>
					<% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i>
					<% end %>
				</div>
				<div class="input-group">
					<%= f.label :password ,:class=>'hide'%>
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder=>'Password' %>
				</div>

				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<%= f.label :password_confirmation,:class=>'hide' %>
					<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder=>'Confirm Password' %>
				</div>

				<div class="form-group">
					<%= f.submit "Sign up", :class=>'btn btn-custom btn-outline'%>
				</div>
				<div style="color: red;" id="sign_up_alert" >
					<%= devise_error_messages! %>
				</div>

				<% end %>
				<div class="controls">
				<%= render "devise/shared/links" %>
				</div>
			</form>
		</div>
	</div>
	<div>

