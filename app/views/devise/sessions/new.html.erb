<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<form id="loginform" class="form-horizontal" role="form">
	<div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
	<div id="loginbox" class="mainbox col-sm-8 col-sm-offset-2">
		<div class="panel" >
			<div class="panel-body">
				<div class="panel-title text-left">
					LOG IN
				</div>
				<div style="margin-bottom: 25px" class="input-group" >
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.email_field :email, autofocus: true,:class=>'form-control',:placeholder=>'Enter Email Address' %>
				</div>
				<div style="margin-bottom: 15px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<%= f.password_field :password, autocomplete: "off",:class=>'form-control',:placeholder=>'Enter Password' %>
				</div>
				<% if devise_mapping.rememberable? -%>
				<div class="input-group">
					<div class="checkbox">
						<label> <%= f.check_box :remember_me %> <%= f.label :remember_me %> </label>
					</div>
				</div>
				<% end -%>
				<div class="form-group">
					<%= f.submit "Log in",:class=>'btn btn-custom btn-outline' %>
				</div>
				<% end %>
				<div class="form-group">
					<div class="col-sm-12 controls">
						<div style="padding-top:15px; font-size:100%">
							<%= render "devise/shared/links" %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

